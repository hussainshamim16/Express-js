    }
    body {
        background-color: rgb(255, 238, 238);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Paytone One", serif;
        font-weight: 400;
        font-style: normal;
    }

    h1 {
        color: rgb(35, 35, 35);
        font-size: 10rem;
        transition-duration: 0.7s;
    }

    h1:hover {
        color: red;
    }

    @media only screen and (max-width : 765px) {
        .text-h1 {
            font-size: 3rem;
        }
